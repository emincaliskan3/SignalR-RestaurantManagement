@model List<ResultBookingDto>
@{
    ViewData["Title"] = "GetBookingStatusApproved";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<div class="content">
    <div class="container-fluid">
        <script type="text/javascript">
            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7193/SignalRHub").build();
                $("#connstatus").text(connection.state);
                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("GetApprovedBookingList");
                    }, 5000);
                }).catch((err) => { console.log(err) });

                connection.on("ReceiveApprovedBookingList", (values) => {
                    let tablehtml = `<table class="table mt-3">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col">#</th>
                                                                <th scope="col">Ad Soyad</th>
                                                                <th scope="col">Telefon</th>
                                                                <th scope="col">Kişi Sayısı</th>
                                                                <th scope="col">Rezervasyon Durumu</th>
                                                                <th scope="col">Sil</th>
                                                                <th scope="col">Güncelle</th>
                                                                <th scope="col">Onayla</th>
                                                                <th scope="col">İptal Et</th>
                                                                <th scope="col">Beklet</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>`;
                    $.each(values, (index, item) => {
                        let statusClass = 'status-approved'; // Class for "Onaylandı"
                        let iconClass = 'status-icon-approved'; // Icon class
                        let icon = '✔️'; // Icon for "Onaylandı"

                        tablehtml += `<tr>
                                                        <th>${index + 1}</th>
                                                        <td>${item.name}</td>
                                                        <td>${item.phone}</td>
                                                        <td>${item.personCount}</td>
                                                        <td class="${statusClass}">
                                                            <span class="status-icon ${iconClass}">
                                                                ${icon}
                                                            </span>
                                                            ${item.status || 'Onaylı'}
                                                        </td>
                                                        <td><a href="/Booking/DeleteBooking/${item.id}" class="btn btn-outline-danger">Sil</a></td>
                                                        <td><a href="/Booking/UpdateBooking/${item.id}" class="btn btn-outline-success">Güncelle</a></td>
                                                        <td><a href="/Booking/BookingStatusApproved/${item.id}" class="btn btn-outline-info">Onayla</a></td>
                                                        <td><a href="/Booking/BookingStatusCancelled/${item.id}" class="btn btn-outline-dark">İptal Et</a></td>
                                                        <td><a href="/Booking/BookingStatusPending/${item.id}" class="btn btn-outline-warning">Beklet</a></td>
                                                    </tr>`;
                    });
                    tablehtml += "</tbody></table>";
                    $("#bookingList").html(tablehtml);
                });
            });

        </script>

        <h4 class="page-title">Onaylı Rezervasyonlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Onaylı Rezervasyon Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Onaylı rezervasyonlar ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div id="bookingList"></div>
                        <a href="/Booking/CreateBooking/" class="btn btn-outline-primary">Yeni Rezervasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


